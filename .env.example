APP_ENV=development
APP_PORT=8080

DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=new_bulky_db

JWT_ACCESS_EXPIRY=24h
JWT_SECRET=your-secret-key-change-this

# File Upload Configuration
# Local development: ./uploads
# Production (Dokploy with persistent volume): /app/uploads or /var/lib/dokploy/volumes/bulky-uploads
UPLOAD_PATH=./uploads
BASE_URL=http://localhost:8080

# App Store URLs (for force update feature)
# PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.bulky
# APP_STORE_URL=https://apps.apple.com/app/bulky/id123456789

# CORS Configuration
# Comma-separated list of allowed origins
# Leave empty to allow all origins (*) - for development
# For production, specify your frontend domains
# ALLOWED_ORIGINS=
# Production example:
# ALLOWED_ORIGINS=https://admin.bulky.id,https://panel.bulky.id